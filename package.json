{
  "name": "themoviesite",
  "version": "1.0.0",
  "description": "TMDB Movie Browser with JWT Authentication - Client/Server Architecture",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run start --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "install:all": "npm install && npm install --workspace=client && npm install --workspace=server",
    "start": "npm run start --workspace=server",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "movie",
    "tmdb",
    "react",
    "express",
    "jwt",
    "authentication"
  ],
  "author": "",
  "license": "MIT"
}
